            </nav>


                <div class="row pt-5">
                    <div class="col-6">
                        <span class="d-flex justify-content-end"><img src="../assets/<%= img %>.png" style="max-width: 50%;"></span>
                    </div>
                    <div class="col-4 pt-5">
                        <h3 class="d-flex text-light display-4 pt-3 text-dark"><%= date %></h3>
                        <h3 class="d-flex text-light display-4 pt-6 text-dark"><%= time %></h3>
                    </div>
                </div>
         


            <a href="new/<%=people['nationality']%>"><button type="button" class="btn btn-outline-primary" style="margin-left: 76.5%;">Add new person</button></a>


            <div class="pt-5 container-lg">
                <table class="table table-striped table-dark">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Person Name</th>
                        <th scope="col">Nationality</th>
                        <th scope="col">Birthdate</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>

                    <tbody>
                        <% var id = 1; %>
                        <% for (p of people){ %>
                            <tr>
                                <th><%=id%></th>
                                <th><%=p["fullName"]%></th>
                                <th><%=p["nationality"]%></th>
                                <th><%=p["birthDate"]%></th>
                                <th>
                                    <center>
                                        <form action="view" method="">
                                        <input hidden type="text" value="<%=p["_id"]%>" name="id">
                                        <input hidden type="text" value="<%=p["nationality"]%>" name="id">
                                        <a href="view"><button class="btn btn-primary btn-small" type="">View</button></a>
                                        </form>
                                    </center>
                                </th>
                            </tr>
                        <% id++; }%>
                    </tbody>

                </table>
            </div>

           

            


