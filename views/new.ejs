                    <input type="text" class="form-control" id="nationality" value="<%=nationality%>" name="nationality" readonly>
                  </div>
                  <div class="form-group">
                    <label for="birthDate" style="margin-right: 83.5%">Birthdate</label>
                    <input type="date" class="form-control" id="birthday" value="" name="birthDate">
                  </div>
                  <button class="btn btn-outline-primary" style="margin-top: 1rem;">Add</button>
                </form>

            
          </div>
        </div>
